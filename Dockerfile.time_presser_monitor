FROM python:3.9-slim

WORKDIR /app

# Install dependencies
COPY requirements_time_presser.txt .
RUN pip install --no-cache-dir -r requirements_time_presser.txt

# Copy the monitor service code
COPY victory36_time_presser_monitor.py .

# Expose port
EXPOSE 8080

# Run the service
CMD ["python", "victory36_time_presser_monitor.py"]
