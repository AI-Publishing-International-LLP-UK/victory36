FROM python:3.9-slim

WORKDIR /app

# Install dependencies
COPY requirements_dr_lucy.txt .
RUN pip install --no-cache-dir -r requirements_dr_lucy.txt

# Copy the fixed service code
COPY dr_lucy_service_fixed.py .

# Expose port
EXPOSE 8080

# Run the service
CMD ["python", "dr_lucy_service_fixed.py"]
